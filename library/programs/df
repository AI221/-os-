--By Jackson McNeill, with loose inspiration from the Unix command
local args = {...}
if not args[1] then 
  print(osStuff.g("dfUsage"))
  return 
end 
args[1]="/"..shell.resolve(args[1])
if not fs.exists(args[1]) then 
  printError(args[1].." does not exist!")
  return 
elseif fs.isReadOnly(args[1]) == "noAccess" then 
  printError("Insufficient privileges to access "..args[1].."!")
  return false 
end 
local function getSpace(file)
  if fs.isReadOnly(file) =="noAccess" then 
    print("Warning - Did not have sufficient privileges to open file "..file..". Will be excluded from count.")
    return 0
  end 
  local f = fs.open(file,"r")
  if f then 
    local r = f.readAll()
    f.close()
    return #r
  end 
end 
local function getFolder(folder)
  local fls = fs.list(folder)
  local r = 0
  for i=1,table.maxn(fls) do 
    if fs.isDir(folder.."/"..fls[i]) then
      r=r+getFolder(folder.."/"..fls[i])
    else 
      r=r+getSpace(folder.."/"..fls[i])
      if not r then  
        printError"(1) An error occurred getting the total space of a file."
        return 
      end 
    end
  end 
  return (r or 0)
end 
local total = 0
if fs.isDir(args[1]) then 
  --get all files in directory
  total = getFolder(args[1])
else 
  total = getSpace(args[1])
  if not total then 
    printError"(2) An error occurred getting the total space of a file."
    return 
  end 
end 
--print"///Results:\\\\\\"--note that \\ = \
local type
if total/1028 > 1 then 
  total =math.ceil(total/1028)
  type = "KB"
end 
term.setTextColor(osStuff.dirColor)
write(args[1])
term.setTextColor(osStuff.textColor)
write" - "
term.setTextColor(osStuff.commandColor)
print(tostring(total).." "..(type or "Bytes"))
